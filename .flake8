[flake8]
max-line-length = 127
max-complexity = 10

exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    .mypy_cache,
    .tox,
    htmlcov,
    data

ignore = 
    E501,
    W503,
    E203,
    E266,
    W291

per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F811

count = True
statistics = True
show-source = True
